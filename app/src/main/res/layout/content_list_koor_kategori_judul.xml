<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_list_all_clicked">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_big_16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ctn_koor_judul_kategori"
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/ctn_koor_button_hapus"
            android:layout_height="wrap_content"
            tools:text="@string/dummy"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextBlack"/>

        <ImageView
            android:id="@+id/ctn_koor_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_medium_8dp"
            android:layout_toStartOf="@id/ctn_koor_button_hapus"
            android:src="@drawable/ic_kategori_edit"/>

        <ImageView
            android:id="@+id/ctn_koor_button_hapus"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_medium_8dp"
            android:layout_marginLeft="@dimen/dimen_big_16dp"
            android:src="@drawable/ic_kategori_delete"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>