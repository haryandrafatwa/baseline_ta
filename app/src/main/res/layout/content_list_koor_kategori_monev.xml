<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_list_all_clicked">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:layout_marginBottom="@dimen/dimen_medium_8dp"
        android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_kategori_monev"
                android:textSize="@dimen/text_size_default_12sp"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"/>

            <TextView
                android:layout_below="@id/text_view_kategori"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:id="@+id/ctn_koor_monev_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:text="@string/dummy"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"/>

            <View
                android:id="@+id/view_atur"
                android:layout_below="@id/ctn_koor_monev_kategori"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"
                android:layout_marginTop="@dimen/dimen_small_4dp"
                android:layout_marginBottom="@dimen/dimen_small_4dp"/>

            <TextView
                android:id="@+id/text_view_bimbingan"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:textSize="@dimen/text_size_default_12sp"
                android:layout_below="@id/view_atur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_minimal_jumlah_bimbingan"/>

            <TextView
                android:layout_below="@id/text_view_bimbingan"
                android:id="@+id/ctn_koor_monev_jumlah_bimbingan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:textStyle="bold"
                android:text="@string/dummy"
                android:textColor="@color/colorTextBlack"/>
        <ImageView
            android:id="@+id/ctn_koor_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ctn_koor_button_hapus"
            android:layout_marginStart="@dimen/dimen_medium_8dp"
            android:layout_marginEnd="@dimen/dimen_medium_8dp"
            android:src="@drawable/ic_kategori_edit"/>

        <ImageView
            android:id="@+id/ctn_koor_button_hapus"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_medium_8dp"
            android:layout_marginEnd="@dimen/dimen_medium_8dp"
            android:src="@drawable/ic_kategori_delete"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>