<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium_8dp"
                    android:layout_marginBottom="@dimen/dimen_medium_8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_judul_proyek_akhir"/>

                    <TextView
                        android:id="@+id/frg_mhs_pa_textview_judulpa"
                        style="@style/content_all_text_bold_color_primary"
                        tools:text="@string/dummy_pa_judul"/>

                    <View
                        style="@style/view_all_line_horizontal"/>

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nama_kelompok"/>

                    <TextView
                        android:id="@+id/frg_mhs_pa_textview_kelompokpa"
                        tools:text="@string/dummy_mahasiswa_kelompok"
                        style="@style/content_all_text_bold_color_black"
                        android:layout_marginBottom="@dimen/dimen_medium_8dp"/>

                    <View
                        style="@style/view_all_line_horizontal"/>

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_jumlah_bimbingan"/>

                    <TextView
                        android:id="@+id/act_mhs_pa_monev_bimbingan"
                        style="@style/content_all_text_bold_color_black"
                        tools:text="@string/dummy_monev_terkahir"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_list_mahasiswa"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_mhs_1"
                android:layout_marginBottom="@dimen/dimen_medium_8dp"
                android:layout_marginStart="@dimen/dimen_medium_8dp"
                android:layout_marginEnd="@dimen/dimen_medium_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium_8dp"
                    android:layout_marginBottom="@dimen/dimen_medium_8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nama_mahasiswa"/>

                    <TextView
                        style="@style/content_all_text_bold_color_primary"
                        android:id="@+id/frg_mhs_pa_nama_1"
                        tools:text="@string/dummy_anggota_kelompok_1"/>

                    <View
                        style="@style/view_all_line_horizontal"/>


                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nim"/>

                    <TextView
                        style="@style/content_all_text_bold_color_black"
                        tools:text="@string/dummy_anggota_nim_1"
                        android:id="@+id/frg_mhs_pa_nim_1"/>

                    <View
                        style="@style/view_all_line_horizontal"/>

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_marginEnd="@dimen/dimen_big_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:text="@string/text_lihat_detail"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_mhs_2"
                android:layout_marginBottom="@dimen/dimen_medium_8dp"
                android:layout_marginStart="@dimen/dimen_medium_8dp"
                android:layout_marginEnd="@dimen/dimen_medium_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium_8dp"
                    android:layout_marginBottom="@dimen/dimen_medium_8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nama_mahasiswa"/>

                    <TextView
                        style="@style/content_all_text_bold_color_primary"
                        android:id="@+id/frg_mhs_pa_nama_2"
                        tools:text="@string/dummy_anggota_kelompok_1"/>

                    <View
                        style="@style/view_all_line_horizontal"/>


                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nim"/>

                    <TextView
                        style="@style/content_all_text_bold_color_black"
                        tools:text="@string/dummy_anggota_nim_1"
                        android:id="@+id/frg_mhs_pa_nim_2"/>

                    <View
                        style="@style/view_all_line_horizontal"/>

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big_16dp"
                        android:layout_marginEnd="@dimen/dimen_big_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:text="@string/text_lihat_detail"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
