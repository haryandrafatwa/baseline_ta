<androidx.cardview.widget.CardView android:id="@+id/card_view_mhs_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dimen_big_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_profil_detail_nama"/>

        <TextView
            tools:text="@string/dummy_anggota_kelompok_2"
            style="@style/content_all_text_bold_color_primary"
            android:id="@+id/dsn_sidang_textview_nama_2"/>

        <View
            style="@style/view_all_line_horizontal"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_big_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_profil_detail_nim"/>

        <TextView
            tools:text="@string/dummy_anggota_nim_2"
            style="@style/content_all_text_bold_color_black"
            android:id="@+id/dsn_sidang_textview_nim_2"/>
        <View
            android:layout_marginTop="@dimen/dimen_medium_8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_line"
            android:background="@color/colorBackground"/>

        <!--penilaian sidang mhs 2-->
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_medium_8dp"
            android:id="@+id/linear_mhs_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_tanggal_sidang"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"/>

            <TextView
                android:id="@+id/tanggal_sidang2"
                style="@style/content_all_text_bold_color_black"
                tools:text="@string/text_belum_sidang"/>

            <View
                style="@style/view_all_line_horizontal"/>

            <TextView
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_review_sidang"/>

            <TextView
                android:textColor="@color/colorTextBlack"
                tools:text="@string/dummyLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:id="@+id/dsn_sidang_textview_review_2"/>

            <View
                style="@style/view_all_line_horizontal"/>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sidang_nilai_proposal"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sidang_pembimbing_1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dsn_sidang_nilai_proposal_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    tools:text="@string/dummy_nilai_monev"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"/>

                <TextView
                    android:id="@+id/dsn_sidang_nilai_pembimbing1_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    tools:text="@string/dummy_nilai_monev"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"/>

            </LinearLayout>

            <View
                style="@style/view_all_line_horizontal"/>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sidang_penguji_1"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sidang_penguji_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dsn_sidang_nilai_penguji1_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    tools:text="@string/dummy_nilai_monev"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"/>

                <TextView
                    android:id="@+id/dsn_sidang_nilai_penguji2_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    tools:text="@string/dummy_nilai_monev"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"/>

            </LinearLayout>

            <View
                style="@style/view_all_line_horizontal"/>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sidang_nilai_total"/>

                <TextView
                    android:id="@+id/dsn_sidang_nilai_total_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_title_big_24sp"
                    tools:text="@string/dummy_nilai_monev"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <View
                style="@style/view_all_line_horizontal"/>

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_big_16dp"
                android:layout_marginEnd="@dimen/dimen_big_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:text="@string/text_status_sidang"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dimen_weight"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_title_big_24sp"
                    tools:text="@string/dummy_status_sidang"
                    android:id="@+id/dsn_sidang_textview_status_2"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dimen_medium_8dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_line"
                android:background="@color/colorBackground"/>
        </LinearLayout>

        <TextView
            android:id="@+id/act_dsn_textview_tambah_sidang_mhs_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_tambah_sidang"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/dimen_medium_8dp"
            android:gravity="end"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/act_dsn_textview_ubah_sidang_mhs_2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_ubah_sidang"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/dimen_medium_8dp"
            android:gravity="end"
            android:textAllCaps="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
