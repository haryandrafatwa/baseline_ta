<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ctn_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_medium_8dp"
        android:text="@string/text_kategori_judul_tambah"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/text_size_title_medium_20sp" />

    <EditText
        android:id="@+id/dialog_kategori_ubah"
        android:layout_below="@id/ctn_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_kategori"
        android:layout_margin="@dimen/dimen_big_16dp"
        android:paddingBottom="@dimen/dimen_big_16dp"/>


</RelativeLayout>